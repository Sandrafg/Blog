<table>
	<tr>
		<th>Titulo</th>
		<th>Texto</th>
		<th colspan ="3"></th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<td><%= link_to 'Show', article_path(article) %></td>
			<td><%= link_to 'Edit', edit_article_path(article) %></td>
			<td><%= link_to 'Destoy', article_path(article), 
							method: :delete, data: { confirm: 'Estas seguro de borrar el registro?' } %></td>
		</tr>
	<% end %>
</table>